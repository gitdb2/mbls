<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/targetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:inputType="text">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PruebajsonxmlActivity" 
        android:onClick="buscar"/>
    <Button
        android:id="@+id/buttonViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ViewPagerActivity" 
        android:onClick="goPager"/>
    
       <Button
        android:id="@+id/buttonViewPager2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OtroPagerActivity" 
        android:onClick="goPager2"/>
 		<Button
        android:id="@+id/buttonSearch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PruebajsonxmlActivityPagerSearchable" 
        android:onClick="buscar2"/>
 		
 		<Button
        android:id="@+id/buttonSearch44"
        android:layout_width="match_parent"
