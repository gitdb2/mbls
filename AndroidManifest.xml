<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datamyne.mobile.xml"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
 
        <activity android:name="SearchBoxActivity"></activity>
        <activity android:name="PruebajsonxmlActivity$DetailsActivity"></activity>
		<activity android:name="PruebajsonxmlActivity"></activity> 
		<activity android:name="ViewPagerActivity"></activity>
		<activity android:name="OtroPagerActivity"></activity>
		<activity android:name="PruebajsonxmlActivityPager"></activity>
		<activity android:name="PruebajsonxmlActivityPager$DetailsActivity"></activity>
		<activity android:name="PruebajsonxmlActivityPagerSearchable$DetailsActivity"></activity>
		
		<activity 
		    android:name="PruebajsonxmlActivityPagerSearchable"
		    android:label="@string/title_trade_profiles">
		    
		    <intent-filter>
            	<action android:name="android.intent.action.SEARCH" />
        	</intent-filter>
        	
        	<meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable"/>
		</activity>
		
         <activity
            android:name="com.datamyne.mobile.dashboard.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.datamyne.mobile.dashboard.AboutActivity"
            android:label="@string/title_about" />
        
        <activity
            android:name="com.datamyne.mobile.dashboard.MyAccountActivity"
            android:label="@string/title_my_account" />
        
        <activity
            android:name="com.datamyne.mobile.dashboard.FeatureActivity"
            android:label="@string/title_feature" />
		
    </application>

</manifest>